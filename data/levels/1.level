FORMAT 1.0-LEVEL
# The first line must always contain the name of the format,
# in case we added support for other format later on.

name = "Introduction"

# Version
version = 1

# Authors
authors = {
	"Hugo Kindel",
	"Maxime Jauroyon"
}

# The board of the level
board_width = 10
board_height = 7

# Possible values:
# 0: Empty
# 1: Animal dog
# 2: Animal chicken
# 3: Animal pig
# 4: Block red
# 5: Block green
# 6: Block blue
# 7: Block purple
# 8: Block yellow
# 9: Obstacle wood
