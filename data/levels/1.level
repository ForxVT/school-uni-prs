	{6,6,6,8,8,8,8,8,8,8},
	{4,4,4,5,5,5,6,6,6,6}
}

# The visible zone of the level.
# Compared to the board, it starts at the position (-1,-1) because of the border
# The size can be at most superior by two to the board size
visible_zone_width = 12
visible_zone_height = 9
visible_zone_x = 0 # The base position -1 still applies, so the real value will be -1 + visible_zone_x = -1
visible_zone_y = 0 # Same

# Possible values:
# 0: Outside
# 1: Border
# 2: Inside
